  </head>

  <body>

    <!-- Wrap all page content here -->
    <div id="wrap">

      <!-- Fixed navbar -->
      <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">OKfoot</a>
          </div>
          <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">England <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/articles/search/england">All</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">News Papers</li>
                <li><a href="/articles/search/dailytelegraph">The Daily Telegraph</a></li>
                <li><a href="/articles/search/dailymail">Daily Mail</a></li>
                <li><a href="/articles/search/independent">The Independent</a></li>
                <li><a href="/articles/search/Evening%20Standard">Evening Standard</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Spain <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/articles/search/spain">All</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">News Papers</li>
                <li><a href="/articles/search/MARCA">MARCA</a></li>
                <li><a href="/articles/search/mundo%20deportivo">El Mundo Deportivo</a></li>
                <li><a href="/articles/search/spainsport">SPORT</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Germany <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/articles/search/germany">All</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">News Papers</li>
                <li><a href="/articles/search/kicker">Kicker-Sportmagazin</a></li>
                <li><a href="/articles/search/build">Bild-Zeitung</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Italy <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/articles/search/italy">All</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">News Papers</li>
                <li><a href="/articles/search/gazzetta%20dello%20sport">La Gazzetta dello Sport</a></li>
                <li><a href="/articles/search/corrieredellosport">Corriere dello Sport</a></li>
                <li><a href="/articles/search/tutto%20sport">Tuttosport</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">France <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/articles/search/france">All</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">News Papers</li>
                <li><a href="/articles/search/Lequipe">L'Equip</a></li>
                <li><a href="/articles/search/Le%20Monde">Le Monde</a></li>
              </ul>
            </li>
          </ul>
          
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/about">About</a></li>
            <li><a href="#" onclick="feedback();">Feedback</a></li>
          </ul>

          <div class="navbar-collapse collapse">
            <form class="navbar-form navbar-right" name="search-box" action="/articles/search">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" onkeydown="search();" name="keyword">
              </div>
            </form>
          </div>
          
          </div><!--/.nav-collapse -->
        </div>
      </div>

      <!-- Begin page content -->
      <div class="container">
        <div class="page-header">
          <h1><%= image_tag 'okfootlogo.png' %></h1>
        </div>
        <p class="lead">Collect football news around the world.</p>
        <div style="margin-left:-3px;">
          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
          <!-- okfoot -->
          <ins class="adsbygoogle"
               style="display:inline-block;width:728px;height:15px"
               data-ad-client="ca-pub-9773965605362149"
               data-ad-slot="4644386919"></ins>
          <script>
          (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>

        <!-- Article List -->
        <div id="article-list">
          <% @result_array.each_with_index do |result, i| %>
            <div class="article-list-title">
              <h3><%= link_to result["title"], result["link"],:target=>["_blank"] %></h3>
              <h5 class="text-muted"><span class="glyphicon glyphicon-transfer"></span> <%= result["title_ja"] %></h5>
              <div>
                <span class="<%= result["label_style"] %>"><%= result["feedname"] %></span> <strong><%= result["author"] %></strong> <%= result["published_date"] %>
                </div>
            </div>
            <% if i == 2 || i == 5 || i == 8 then %>
            <div class="article-list-title">
              <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
              <!-- okfoot_big -->
              <ins class="adsbygoogle"
                   style="display:inline-block;width:728px;height:90px"
                   data-ad-client="ca-pub-9773965605362149"
                   data-ad-slot="3113621318"></ins>
              <script>
              (adsbygoogle = window.adsbygoogle || []).push({});
              </script>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div id="page-nav" style="display: none;"><a href="/articles/page/2?search_feedname=<%= @search_feedname %>&keyword=<%= @keyword %>"></a></div>
      
      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">Feedback & Contact</h4>
            </div>
            <div class="modal-body">
            <p>Do you have feedback or questions?</p>
            <textarea id="feedback-text" class="form-control" rows="3"></textarea>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" onclick="send();">Send</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->

    </div>
    
    <div id="footer">
      <div class="container">
        <p class="text-muted credit">Copyright (C) 2013 crossnote All Rights Reserved.</p>
      </div>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

<script type="text/javascript">
$(function(){
  $('#article-list').infinitescroll({
    navSelector  : '#page-nav',          // この部分をスクロールが通ったら、ページングを実施
    nextSelector : '#page-nav a:first',  // 次のページへのリンク（自動に書き換える、例の中で一回使ったものが次はmy_url/3になる）
    itemSelector : '#article-list',         // my_urlから取ったhtmlのid=targetの部分のliだけ表示する
    debug        : true
  });
});
</script>  </body>
</html>
