    <script type="text/javascript">
    function search() {
      if (window.event.keyCode==13) {
        document.search-box.submit();
      }
    }
   
    function feedback() {
      $('#myModal').modal();
    }

    function send() {
      $('#myModal').modal('hide');
      $.ajax({
        url: "/feedbacks/index",
        data: {
                feedback: $('#feedback-text').val()
            },
        crossDomain: true
      }).done(function(data){
      })
    }
    </script>

